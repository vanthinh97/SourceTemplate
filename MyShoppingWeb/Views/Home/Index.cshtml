@using PagedList.Mvc
@model PagedList.IPagedList<MyShoppingWeb.Models.ProductVM>
@*@using MyShoppingWeb.Models
@{
    List<Categories> lstNewCate = ViewBag.ShowCate;
    string kw = ViewBag.Kw;

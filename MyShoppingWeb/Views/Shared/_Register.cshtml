<div class="container">

    <!-- Trigger the modal with a button -->
    @*<button type="button" class="btn btn-info btn-lg"
        data-toggle="modal" data-target="#_login">Open Modal</button>*@

    <!-- Modal -->
    <div class="modal fade" id="_Register" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 style="margin: 0; line-height: 1.42857143" class="modal-title">Register</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div style="padding:10px">
                        <form method="post" action="@Url.Action("Register", "Account")">
                            <div class="form-group">
                                <label>Email</label>
                                <input name="Email" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input name="Password" type="password" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>FullName</label>
                                <input name="Fullname" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Address</label>
                                <input name="Address" class="form-control" />
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

</div>



